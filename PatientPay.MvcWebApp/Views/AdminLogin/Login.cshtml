@model PatientPay.MvcWebApp.ViewModels.AdminLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta lang="en" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico">
    <title>Patient Payment System</title>
    @Styles.Render("~/Content/css")
</head>

<body class="login">
    <div class="container-fluid">
        <h3 class="text-center" style="color: aquamarine"><strong>Administrator Login</strong></h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()           

            <div class="row login-row">
                <div class="col-md-4 col-md-offset-4 login-top">
                    <h4 class="text-center"><i class="glyphicon glyphicon-user user-icon"></i>Enter Credentials</h4><br />
                    <div style="margin-bottom:1.5em;">
                        <div class="input-group">
                            @Html.Partial("_MessagePartial")
                        </div><br />
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Email or Username" } })
                        </div><br />
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                        </div>
                    </div>
                    <button class="my-button btn btn-default"><b>Login</b></button>
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/js")
</body>
</html>
