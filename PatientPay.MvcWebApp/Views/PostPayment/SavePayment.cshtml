@model PatientPay.MvcWebApp.ViewModels.PostPaymentViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    @{
        ViewBag.Heading = "Post Payment";
        ViewBag.Icon = "briefcase";
    }
    <br />

    @Html.Partial("_MessagePartial")

    <div class="form-group">
        @Html.LabelFor(model => model.PatientGivenId, htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PatientGivenId, new { htmlAttributes = new { @class = "form-control", onkeyup = "getByPatientId();" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-6 entries" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", onkeyup = "getByUsername();" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-6 entries" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-6 entries" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-6 entries" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-6 entries" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group col-lg-6 btn-div">
        <button id="submitBtn" type="submit" class="my-button btn" disabled=@(Model == null ? true : Model.SubmitDisabled)>Post</button>
    </div>
</div>
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/postPayment.js")"></script>
}
